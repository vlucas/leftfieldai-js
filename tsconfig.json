{
  "compileOnSave": true,
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "target": "es2019",
    "lib": ["es2019", "dom"],
    "skipLibCheck": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "strict": true,
    "declaration": true,
    "sourceMap": true,
    "jsx": "react",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "exclude": ["node_modules", "__tests__"]
}
